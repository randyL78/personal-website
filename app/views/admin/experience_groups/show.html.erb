<div class="container p-4 mt-5 rounded form bg-theme-neutral">
  <h1 class="mb-4 text-center">Experience Group for Profile Number: <%= @experience_group.profile_id %></h1>
  <%= render partial: 'form', locals: { is_readonly: true } %>
  <h2 class="mt-4">Experiences:</h2>
  <% if @experience_group.experiences.present? %>
    <table class="table border-primary table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Start Date</th>
          <th scope="col">End Date</th>
          <th scope="col">Company</th>
          <th scope="col">Title</th>
          <th scope="col"></th>
        </tr>
      </thead>
        <tbody>
          <tr>
          <% @experience_group.experiences.order('end_date DESC').each do |experience| %>
            <td scope="col"><%= experience.start_date %></td>
            <td scope="col"><%= experience.end_date %></td>
            <td scope="col"><%= experience.company %></td>
            <td scope="col"><%= experience.title %></td>
            <td scope="col">
              <%= link_to 'View', admin_experience_path(experience), class: "btn btn-primary" %>
              <%= link_to 'Delete',
                admin_experience_path(experience),
                class: "btn btn-danger",
                method: :delete,
                data: { confirm: "This will permanately remove the experience group. Are you sure?" }
              %>
            </td>
          </tr>
          <% end %>
        </tbody>
    </table>
  <% end %>
  <%= link_to "New Experience", new_admin_experience_path(experience_group_id: @experience_group.id), class: "btn btn-primary" %>
</div>
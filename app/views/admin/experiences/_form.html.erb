<%= form_with model: @experience, url: @experience.persisted? ? admin_experience_path(@experience) : admin_experiences_path do |f| %>
  <div class="mb-3">
    <%= f.label :experience_group_id, "Experience Group Id", class: "form-label" %>
    <%= f.text_field :experience_group_id, class: "form-control", readonly: true %>
  </div>

  <div class="mb-3">
    <%= f.label :company, "Company", class: "form-label" %>
    <%= f.text_field :company, class: "form-control", readonly: is_readonly %>
  </div>

  <div class="mb-3">
    <%= f.label :title, "Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", readonly: is_readonly %>
  </div>

  <div class="mb-3">
    <%= f.label :start_date, "Start Date", class: "form-label" %>
    <%= f.text_field :start_date, class: "form-control", type: "date", readonly: is_readonly %>
  </div>

  <div class="mb-3">
    <%= f.label :end_date, "End Date", class: "form-label" %>
    <%= f.text_field :end_date, class: "form-control", type: "date", readonly: is_readonly %>
  </div>

  <div class="mb-3">
    <%= f.label :location, "Location", class: "form-label" %>
    <%= f.text_field :location, class: "form-control", readonly: is_readonly %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Description", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", readonly: is_readonly %>
  </div>

  <div class="justify-content-between d-flex">
    <% if is_readonly %>
      <%= link_to "Edit", edit_admin_experience_path(@experience), class: "btn btn-primary" %>
      <%= link_to "Back", admin_experience_group_path(@experience.experience_group_id), class: "btn btn-secondary" %>
    <% else %>
      <%= f.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Cancel", @experience.persisted? ? admin_experience_path(@experience) : admin_experience_group_path(@experience.experience_group_id), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
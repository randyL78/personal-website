<div class="mb-5 row">
  <div class="mb-lg-3 pe-4 col-lg-3 text-lg-end">
    <h3 class="fw-bold fs-4 mb-1"><%= education.school %></h3>
    <p class="fst-italic mb-1"><%= "#{education.start_date.strftime("%b %Y")} - #{education.end_date.strftime("%b %Y")}" %></p>
    <p class="fst-italic text-theme-primary fs-6 mb-1"><%= education.location %></p>
  </div>
  <div class="ps-lg-4 col-lg-8">
    <div class="d-flex justify-content-between align-items-end">
      <h4 class="fw-bold mb-1 fs-4">
        <%= education.level %>
      </h4>
      <p class="text-theme-primary mb-1 text-nowrap fw-bold">GPA: <%= number_to_currency(education.gpa, unit: "") %></p>
    </div>
    <h5 class="fw-bold mb-1 fs-5 text-black-50">
      <%= education.major %><%= education.minor.present? ? ", #{education.minor.presence}(Minor)" : nil %>
    </h5>
    <p class="mb-1"><%= education.description %></p>
    <% if education.achievements.present? %>
      <div class="d-none d-md-block">
        <h5 class="fw-bold mb-1 mt-3 fs-6">Achievements</h5>
        <ul class="ps-3">
          <% education.achievements.each do | achievement | %>
            <li><%= achievement %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="col-lg-1">
  </div>
</div>
